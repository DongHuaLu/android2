package com.dolph.twilioapp.twilio;

import android.app.AlertDialog;
import android.content.DialogInterface;
import android.content.DialogInterface.OnClickListener;

import com.dolph.twilioapp.activity.call.CallActivity;
import com.twilio.client.Connection;
import com.twilio.client.ConnectionListener;

public class TwilioConnectionListener implements ConnectionListener {

	@Override
	public void onConnected(Connection inConnection) {
		System.out.println("connected");
	}

	@Override
	public void onConnecting(Connection inConnection) {
		System.out.println("connecting");
	}

	@Override
	public void onDisconnected(Connection inConnection) {
		AlertDialog dialDialog=CallActivity.CallFragment.dialDialog;
		dialDialog.dismiss();
		dialDialog = new AlertDialog.Builder(CallActivity.CallFragment.this.getActivity()).setTitle("挂断").setMessage("已经挂断").setPositiveButton("确定", new OnClickListener() {

			@Override
			public void onClick(DialogInterface dialog, int which) {
			}
		}).create();
		dialDialog.show();
	}

	@Override
	public void onDisconnected(Connection inConnection, int inErrorCode, String inErrorMessage) {

	}

}
